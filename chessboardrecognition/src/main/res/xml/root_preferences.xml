<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/CannyEdges">

        <EditTextPreference
            app:key="canny_thres_1"
            app:title="Threshold 1"
            app:defaultValue="40"
            app:useSimpleSummaryProvider="true" />


        <EditTextPreference
            app:key="canny_thres_2"
            app:title="Threshold 2"
            app:defaultValue="100"
            app:useSimpleSummaryProvider="true" />

