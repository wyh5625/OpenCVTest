    </PreferenceCategory>

    <PreferenceCategory app:title="@string/HoughLine">

        <EditTextPreference
            app:key="houghline_thres"
            app:title="Threshold"
            app:defaultValue="200"
            app:useSimpleSummaryProvider="true" />


        <EditTextPreference
        app:key="houghline_minlinelength"
        app:title="Min Line Length"
        app:defaultValue="300"
        app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="houghline_maxlinegap"
            app:title="Max Line Gap"
            app:defaultValue="500"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/binary">


        <EditTextPreference
            app:key="binary_thres"
            app:title="Threshold"
            app:defaultValue="120"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>


